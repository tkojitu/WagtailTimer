<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/key_sound_list"
        android:title="@string/sound"
        android:defaultValue="@string/voice"
        android:entries="@array/sounds"
        android:entryValues="@array/sounds"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="@string/key_language_list"
        android:title="@string/language"
        android:defaultValue="@string/lang_default"
        android:entries="@array/languages"
        android:entryValues="@array/languages"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
